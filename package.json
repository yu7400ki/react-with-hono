{
	"name": "react-with-hono",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "run-p dev:*",
		"dev:client": "vite",
		"dev:server": "vite --config vite.server.config.ts",
		"dev:hcm": "hcm '**/*.module.css' -w",
		"build": "tsc -b && vite build && vite build --config vite.server.config.ts",
		"preview": "bun run build && wrangler pages dev",
		"deploy": "bun run build && wrangler pages deploy",
		"lint": "biome check",
		"format": "biome check --write",
		"test": "vitest --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"generate": "run-p generate:*",
		"generate:tsr": "tsr generate",
		"generate:hcm": "hcm '**/*.module.css'"
	},
	"dependencies": {
		"@tanstack/react-router": "^1.57.17",
		"hono": "^4.6.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.1",
		"@chromatic-com/storybook": "^1.9.0",
		"@cloudflare/workers-types": "^4.20240909.0",
		"@hono/vite-build": "^1.1.0",
		"@hono/vite-dev-server": "^0.16.0",
		"@storybook/addon-essentials": "^8.3.1",
		"@storybook/addon-interactions": "^8.3.1",
		"@storybook/addon-links": "^8.3.1",
		"@storybook/addon-onboarding": "^8.3.1",
		"@storybook/blocks": "^8.3.1",
		"@storybook/experimental-addon-test": "^8.3.2",
		"@storybook/react": "^8.3.1",
		"@storybook/react-vite": "^8.3.1",
		"@storybook/test": "^8.3.1",
		"@tanstack/router-cli": "^1.58.1",
		"@tanstack/router-devtools": "^1.57.17",
		"@tanstack/router-plugin": "^1.57.15",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"@vitest/browser": "^2.1.1",
		"happy-css-modules": "^3.1.1",
		"npm-run-all2": "^6.2.3",
		"playwright": "^1.47.1",
		"storybook": "^8.3.1",
		"typescript": "^5.5.3",
		"vite": "^5.4.1",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.1.1",
		"wrangler": "^3.78.2"
	},
	"overrides": {
		"@types/node": "20.8.3"
	}
}
